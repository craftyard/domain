{
  "compilerOptions": {
    "types": [ "bun-types" ],

    "paths": {
      "src/*": ["./src/*"],
    },

    "lib": ["esnext"],
    "module": "NodeNext",
    "target": "esnext",

    "moduleResolution": "nodeNext",
    "outDir": "./dist",

    "esModuleInterop": true,

    "noErrorTruncation": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*",
  ],
}
  
